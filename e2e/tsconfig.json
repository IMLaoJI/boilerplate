{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "noEmit": true,
    "moduleResolution": "node",
    "lib": [
      "es5",
      "dom"
    ],
    "paths": {
      "@effect-ts-app/core": [
        "../node_modules/@effect-ts-app/core/dist"
      ],
      "@effect-ts-app/core/*": [
        "../node_modules/@effect-ts-app/core/dist/*"
      ],
      "@effect-ts-app/schema": [
        "../node_modules/@effect-ts-app/schema/dist"
      ],
      "@effect-ts-app/schema/*": [
        "../node_modules/@effect-ts-app/schema/dist/*"
      ],
      "@effect-ts-app/boilerplate-demo-client/*": [
        "../packages/boilerplate-demo-client/_src/*"
      ],
      "@effect-ts-app/boilerplate-demo-types/*": [
        "../packages/boilerplate-demo-types/_src/*"
      ],
      "@effect-ts-app/boilerplate-prelude/*": [
        "../packages/boilerplate-prelude/_src/*"
      ],
      "@effect-ts-app/boilerplate-prelude": [
        "../packages/boilerplate-prelude/_src"
      ],
      "@/*": [
        "./*"
      ]
    },
    "transformers": [
      // Transform paths in output .js files
      {
        "name": "ts-transform-paths"
      },
      // Transform paths in output .d.ts files (Include this line if you output declarations files)
      {
        "name": "ts-transform-paths",
        "position": "afterDeclaration"
      },
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/.*"
  ],
  "references": [
    {
      "path": "../packages/boilerplate-demo-types"
    },
    {
      "path": "../packages/boilerplate-demo-client"
    },
    {
      "path": "../packages/boilerplate-prelude"
    }
  ]
}