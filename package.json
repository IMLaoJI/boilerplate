{
    "name": "@effect-ts-app/boilerplate",
    "workspaces": {
        "packages": [
            "apps/api",
            "apps/frontend-*",
            "e2e",
            "packages/*",
            "libs/*"
        ]
    },
    "private": true,
    "scripts": {
        "clean": "ultra -r clean && yarn clean:frontend",
        "clean:frontend": "cd apps/frontend-nuxt && yarn clean || echo 'no frontend found'",
        "clean-dist": "ultra -r clean-dist",
        "upgrade": "echo hi",
        "client": "cd packages/client && yarn client",
        "autofix": "NODE_OPTIONS=--max-old-space-size=6144 ultra -r autofix",
        "lint": "ultra -r lint",
        "circular:dist": "ultra -r circular:dist",
        "start": "concurrently -k -p \"[{name}]\" -n \"API,Frontend\" -c \"cyan.bold,green.bold,blue.bold\" \"yarn start:api\" \"yarn start:frontend\"",
        "start:api": "cd apps/api && yarn start",
        "start:frontend": "cd apps/frontend-nuxt && yarn start",
        "dev": "yarn build:e2e && concurrently -k -p \"[{name}]\" -n \"Watch,API,Frontend\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn watch\" \"yarn dev:api\" \"yarn dev:frontend\"",
        "online-dev": "cd apps/frontend-nuxt && yarn online-dev",
        "dev:api": "cd apps/api && yarn dev",
        "dev:frontend": "cd apps/frontend-nuxt && yarn dev",
        "build-apps": "cd apps/api && yarn build && cd ../frontend && yarn build",
        "postinstall": "patch-package",
        "test": "TEST_COMPILED=1 jest",
        "testsuite": "ultra -r yarn testsuite",
        "up": "yarn update && yarn exec-update",
        "update": "ultra -r --root ncu -u --packageFile package.json",
        "exec-update": "yarn && yarn upgrade",
        "ncu": "ncu -x @types/node",
        "build-libs": "cd packages/prelude && yarn build && cd ../types && yarn build && cd ../client && yarn build && cd ../eslint && yarn build",
        "lint:watch": "ESLINT_TS=1 esw -w --changed --clear --ext ts,tsx",
        "test-libs": "ultra -r --filter \"packages/*\" testsuite",
        "testsuite-libs": "cd packages/prelude && yarn testsuite && cd ../types && yarn testsuite && cd ../client && yarn testsuite",
        "build-api": "cd apps/api && yarn build",
        "watch-libs": "yarn build-libs && ultra -r --filter \"packages/*\" watch",
        "build": "NODE_OPTIONS=--max-old-space-size=6144 tsc --build ./tsconfig.all.json",
        "build-prod": "yarn build-libs && yarn build-frontend-prod",
        "build-frontend-prod": "cd apps/frontend-nuxt && yarn build && CI=1 yarn build-next",
        "build-e2e": "cd apps/api && yarn e2e:build",
        "watch": "yarn build-api || echo build-fail && concurrently -k -p \"[{name}]\" -n \"API,Frontend\" -c \"cyan.bold,green.bold\" \"cd apps/api && yarn build -w\" \"cd apps/frontend-nuxt && yarn compile -w\""
    },
    "resolutions": {
        "@types/react": "^18.0.15",
        "typescript": "https://cdn.jsdelivr.net/npm/@tsplus/installer@0.0.149/compiler/typescript.tgz"
    },
    "dependencies": {
        "@swc/helpers": "0.4.12",
        "cross-env": "^7.0.3",
        "patch-package": "^6.4.7",
        "postinstall-postinstall": "^2.1.0",
        "ts-lib": "^0.0.5",
        "ts-node": "^10.9.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.19.3",
        "@effect-ts/jest": "0.35.2",
        "@effect-ts/tracing-plugin": "0.20.0",
        "@phaphoso/eslint-plugin-dprint": "^0.5.2",
        "@swc/core": "1.3.10",
        "@swc/jest": "^0.2.23",
        "@swc/register": "^0.1.10",
        "@tsconfig/strictest": "^1.0.2",
        "@tsplus/installer": "0.0.149",
        "@types/jest": "^29.2.0",
        "@types/lodash": "^4.14.186",
        "@types/node": "^15.6.1",
        "@typescript-eslint/eslint-plugin": "^5.41.0",
        "@typescript-eslint/parser": "^5.41.0",
        "@typescript-eslint/scope-manager": "^5.41.0",
        "babel-plugin-replace-import-extension": "^1.1.3",
        "concurrently": "^7.5.0",
        "core-js": "^3.26.0",
        "dprint": "^0.32.2",
        "enhanced-resolve": "^5.10.0",
        "eslint": "^8.26.0",
        "eslint-import-resolver-typescript": "^3.5.2",
        "eslint-import-resolver-webpack": "^0.13.2",
        "eslint-plugin-codegen": "^0.16.1",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-simple-import-sort": "^8.0.0",
        "eslint-plugin-sort-destructure-keys": "^1.4.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "eslint-watch": "^8.0.0",
        "fast-check": "^3.3.0",
        "history": "^5.3.0",
        "jest": "29.2.1",
        "jest-esm-transformer": "^1.0.0",
        "jest-node-exports-resolver": "^1.1.6",
        "lerna": "^6.0.1",
        "madge": "^5.0.1",
        "module-alias": "^2.2.2",
        "nodemon": "^2.0.20",
        "npm-check-updates": "^16.3.15",
        "ts-jest": "^29.0.3",
        "ts-transform-paths": "^2.0.3",
        "tsc-watch": "^5.0.3",
        "tsconfig-paths": "^4.1.0",
        "typescript": "https://cdn.jsdelivr.net/npm/@tsplus/installer@0.0.149/compiler/typescript.tgz",
        "typescript-transform-paths": "^3.4.4",
        "ultra-runner": "^3.10.5"
    }
}