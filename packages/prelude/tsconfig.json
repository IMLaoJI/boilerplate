{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "lib": [
            "esnext",
            "DOM"
        ],
        "tsPlusConfig": "../../tsplus.config.json",
        "moduleResolution": "Node16",
        "outDir": "./dist",
        "rootDir": "./_src",
        "tsBuildInfoFile": "./dist/.tsbuildinfo",
        "types": [
            "../../types/prelude",
            "../../types/global",
            "../../types/modules"
        ],
        "paths": {
            "@effect-ts-app/boilerplate-prelude": [
                "./_src"
            ],
            "@effect-ts-app/boilerplate-prelude/*": [
                "./_src/*"
            ],
        },
    },
    "include": [
        // "./_src/**/*.mts",
        "./_src/**/*.ts"
    ],
    "ts-node": {
        "compiler": "ttypescript",
        "require": [
            "tsconfig-paths/register"
        ],
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "references": []
}